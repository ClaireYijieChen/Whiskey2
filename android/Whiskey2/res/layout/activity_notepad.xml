<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotepadActivity">
    <ListView
        android:id="@+id/notepad_bookmarks"
        android:layout_width="@dimen/bookmark_item_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
    </ListView>
    <org.kvj.whiskey2.widgets.ListPageSelector
        android:id="@+id/notepad_sheets"
        android:layout_width="@dimen/sheets_list_width"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/notepad_bookmarks"
        android:background="@color/abs__background_holo_light">
    </org.kvj.whiskey2.widgets.ListPageSelector>
    <android.support.v4.view.ViewPager
        android:id="@+id/notepad_pager"
        android:background="@android:drawable/screen_background_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/notepad_bookmarks">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/notepad_dnd_targets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dnd_target_margin"
        android:orientation="horizontal"
        android:visibility="invisible">
        <ImageButton
            android:id="@+id/dnd_move_target"
            android:layout_width="@dimen/dnd_target_size"
            android:layout_height="@dimen/dnd_target_size"
            android:layout_margin="0dp"
            android:background="@drawable/dnd_target_bg"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dnd_move"/>
        <ImageButton
            android:id="@+id/dnd_link_target"
            android:layout_width="@dimen/dnd_target_size"
            android:layout_height="@dimen/dnd_target_size"
            android:layout_margin="0dp"
            android:background="@drawable/dnd_target_bg"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dnd_link"/>
        <ImageButton
            android:id="@+id/dnd_merge_target"
            android:layout_width="@dimen/dnd_target_size"
            android:layout_height="@dimen/dnd_target_size"
            android:layout_margin="0dp"
            android:background="@drawable/dnd_target_bg"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dnd_merge"/>
        <ImageButton
            android:id="@+id/dnd_trash_target"
            android:layout_width="@dimen/dnd_target_size"
            android:layout_height="@dimen/dnd_target_size"
            android:layout_margin="0dp"
            android:background="@drawable/dnd_target_bg"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dnd_trash"/>
    </LinearLayout>
</RelativeLayout>