<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotepadActivity" >

    <ListView
        android:id="@+id/notepad_bookmarks"
        android:layout_width="@dimen/bookmark_item_width"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
    </ListView>
    <android.support.v4.view.ViewPager
	    android:id="@+id/notepad_pager"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_toRightOf="@id/notepad_bookmarks"
	    android:layout_marginLeft="5dp"
	   	android:layout_alignParentTop="true">
	</android.support.v4.view.ViewPager>    
    <org.kvj.whiskey2.widgets.ListPageSelector
        android:id="@+id/notepad_sheets"
        android:visibility="gone"
        android:layout_width="150dp"
        android:background="@color/abs__background_holo_light"
        android:layout_height="match_parent"
	    android:layout_toRightOf="@id/notepad_bookmarks"
        android:layout_alignParentTop="true">
    </org.kvj.whiskey2.widgets.ListPageSelector>
	
</RelativeLayout>